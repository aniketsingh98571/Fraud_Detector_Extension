{
    "manifest_version": 3,
    "name": "Fraudvisor",
    "version": "1.0.0",
    "description": "A AI based web extension to identify scammers",
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "src/background.ts",
      "type": "module"
    },
    "permissions": [
      "tabs"
    ],
    "host_permissions": [
      "https://fraudvisor-frontend.onrender.com/*",
      "https://fraudvisor-backend.onrender.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "src/content/githubOverlay.ts"
        ],
        "run_at": "document_idle"
      }
    ]
  }